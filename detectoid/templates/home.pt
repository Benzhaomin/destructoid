<metal:main use-macro="load: layout.pt" >
  <div class="col-md-12" metal:fill-slot="content">

    <form action="" class="search-form">
      <div class="form-group has-feedback">
        <label for="search" class="sr-only"></label>
        <input type="text" class="form-control" name="search" id="search" placeholder="check dat stream">
        <span class="glyphicon glyphicon-search form-control-feedback"></span>
      </div>
    </form>

    <div id="loading" style="display: none;">
      Loading...
    </div>

    <div id="error" style="display: none;">
    </div>

    <div id="stream" style="display: none;">
      <!--<h3 class="name"></h3>-->

      <label class="viewers">
        <big class="value"></big> viewers
      </label>

      <label class="chatters">
        <big class="value"></big> chatters
      </label>

      <label class="followers">
        <big class="value"></big> followers
      </label>

      <label class="views">
        <big class="value"></big> views
      </label>
    </div>

  </div>

  <tal:block metal:fill-slot="head">
    <link rel="stylesheet" href="${request.static_url('detectoid:static/css/home.css')}" media="all"/>
  </tal:block>

  <tal:block metal:fill-slot="body-bottom">
    <script type="text/javascript" src="${request.static_url('detectoid:static/js/home.js')}"></script>
  </tal:block>

</metal:main>
